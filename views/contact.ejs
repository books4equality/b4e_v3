<form id="contact-form" method="post"><!-- action attribute needed -->
	<label for="name">Name*<br>
	<input type="text" id="name" name="name" class="form-control input-lg" onfocus="this.select()" ><!-- need to add html5 "required" attribute -->
	</label>
	
	<label for="email" id="email-label">Email Address*<br>
	<input type="text" id="email" name="email" class="form-control input-lg" onfocus="this.select()" ><!--need to add html5:   type="email" required -->
	</label>
	
	<br>
	<label for="message">Message*<br>
	<textarea id="message" name="message" class="form-control input-lg" ></textarea><!-- need to add html5 "required" attribute -->
	</label>
	
	<br>
	<input type="submit" value="Send Message" id="send" name="send" class="btn btn-primary">
</form>